[flake8]
exclude =
    venv,
    .venv,
    migrations,
    __pycache__,
    node_modules,
    staticfiles,
    .git,
    build,
    dist,
    *.egg-info

max-line-length = 120
ignore = E501, W503

# Ignore unused variables in test files (common with test fixtures)
per-file-ignores =
    */tests.py:F841
    */test_*.py:F841

